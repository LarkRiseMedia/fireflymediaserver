  MessageBox MB_OK "Error installing service: $1"

  lbl_install_success:
  ExecWait 'netsh firewall add allowedprogram "$2\firefly.exe" "${PRODUCT_NAME}" enable'  

  nsSCM::Start "${PRODUCT_NAME}"
  Exec '"$2\FireflyShell.exe" -q'
